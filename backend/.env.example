# Hugging Face API Configuration
# Get your token from: https://huggingface.co/settings/tokens

# Your Hugging Face API token (starts with hf_...)
HF_TOKEN=YOUR_HF_TOKEN_HERE
# Enable Hugging Face Inference API (set to true to use cloud API)
USE_HUGGINGFACE=true

# Model ID to use (default: microsoft/Phi-3.5-mini-instruct)
HF_MODEL_ID=microsoft/Phi-3.5-mini-instruct

# Local Model Configuration (used when USE_HUGGINGFACE=false)
# Set to false to disable local model loading (uses mock engine instead)
LOAD_MODEL_ON_STARTUP=false

# Use GPU for local model (set to false for CPU-only)
USE_GPU=true

# CORS Configuration
ALLOWED_ORIGINS=*
HF_ENDPOINT_URL=https://machine-rehabilitation-catherine-mileage.trycloudflare.com/generate
